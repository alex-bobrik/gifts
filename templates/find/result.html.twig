        .gift {
            display: flex;
            /*border: 1px black solid;*/
            border-radius: 50px;
            margin: 25px;
            padding: 20px;
            box-shadow: 0 0 10px 0 rgba(0,0,0,0.5);
            background: #ffffff;
            opacity: 0.96;
        }

        .image {
            width: 200px;
            height: 200px;
            border-radius: 100px;
            border: 1px dashed black;
        }

        .gift-image {
            margin-right: 40px;
        }

        .gift-tags {
            display: flex;
            margin-bottom: 30px;
        }

        .tag {
            border: 1px solid black;
            border-radius: 20px;
            margin-right: 5px;
            padding: 5px;
        }

        .gift-buttons {
            display: flex;
        }

        .gift-map {
            margin-right: 30px;
        }

        .back {
            /*text-align: center;*/
            margin-top: 50px;
            margin-left: 25px;
        }

        .no-items {
            background-color: white;
            text-align: center;
            position: absolute;
            top: 50%;
            left: 25%;
            margin-top: -50px;
            margin-left: -50px;
            width: 1000px;
            /*font-weight: bolder;*/
            /*-webkit-text-stroke: 1px black;*/
            border-radius: 30px;
            border: 1px black dashed;
            padding: 5px;
        }


    </style>

    <div class="container">

        <div class="back">
            <a href="{{ path('find') }}" class="btn btn-info">На главную</a>
        </div>

        {% if not items %}
            <div class="no-items">
                <h1>Не найдено подарков по заданным критериям</h1>
            </div>
        {% endif %}

        {% for item in items %}
            <div class="gift">
                <div class="gift-image">
                    {% if item.image %}
                        <img src="{{ asset('images/items/' ~ item.image) }}" alt="image" class="image">
                    {% else %}
                        <img src="{{ asset('images/gift.jpg') }}" alt="image" class="image">
                    {% endif %}
                </div>
                <div class="gift-info">
                    <div class="gift-name">
                        <h4>{{ item.name }}</h4>
                    </div>
                    <hr>
                    <div class="gift-description">
                        <p class="text-justify">{{ item.description }}</p>
                    </div>
                    <div class="gift-tags">
                        {% for itemTag in item.itemTags %}
                            <div class="tag">#{{ itemTag.tag.name }}</div>
                        {% endfor %}
                    </div>
                    <div class="gift-buttons">
                        <div class="gift-map">
                            <a href="{{ path('find_map', {'id': item.mapOption.id}) }}" class="btn btn-info">Найти на карте</a>
                        </div>
                        <div class="gift-order">
                            <a href="{{ path('order', {'id': item.id}) }}" class="btn btn-success">Заказать</a>
                        </div>
                    </div>

                </div>
            </div>
        {% endfor %}

    </div>

{% endblock %}
