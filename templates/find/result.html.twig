{% block body %}

    <style>

        body {
            /*background: url("") no-repeat;*/
            background-image: url("{{ asset('images/bg_find.jpg') }}");
            /*background-repeat: no-repeat;*/
            /*height: 100%;*/

            /* Center and scale the image nicely */
            /*background-position: center;*/
