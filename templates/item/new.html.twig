{% extends 'administrator_base.html.twig' %}

{% block title %}Новый подарок{% endblock %}

{% block body %}
    <style>
        .item-image {
            margin-bottom: 30px;
            /*margin-top: 30px;*/
            display: table-caption;
        }

        .item-mapOption {
            /*margin-top: 20px;*/
        }
    </style>

    {{ form_start(form) }}

    <div class="container">
        <div class="question-block">
            <div>
                <div class="item-image">
                    {{ form_row(form.image, {
                        'label': 'Изображение (рекомендуемый размер 200x200)',
                    }) }}
                </div>
                <div>
                    {{ form_row(form.name, {
                        'label': 'Название подарка',
                        'attr': {'class': 'form-control',
                        }
                    }) }}
                </div>



                <div>
                    {{ form_row(form.description, {
                        'label': 'Описание',
                        'attr': {'class': 'form-control',
                        }
                    }) }}
                </div>

                <div class="item-mapOption">
{#                    <label for="item[mapOption]">Метка на карте</label>#}
                    {{ form_row(form.mapOption, {
                        'label': 'Метка на карте',
                    }) }}
                </div>

                <div class="answers-block">
                    <ul class="list-group">
                        <ul id="type-fields-list" class="list-group"
                            data-prototype="{{ form_widget(form.itemTags.vars.prototype)|e('html_attr') }}"
                            data-widget-tags="{{ '<li class="list-group-item"></li>'|e }}"
                            data-widget-counter="{{ form.itemTags|length }}">
                            {% for tag in form.itemTags %}
                                <li class="list-group-item">
                                    {{ form_errors(tag) }}
                                    {{ form_widget(tag) }}
                                </li>
                            {% endfor %}
                        </ul>

                        <div class="add-answer-block">
                            <button type="button"
                                    class="add-another-collection-widget btn btn-outline-primary"
                                    data-list-selector="#type-fields-list">Добавить тег
                            </button>
                        </div>
                    </ul>
                </div>
            </div>
        </div>



        <div class="submit-block">
            {{ form_widget(form.submit, {
                'label': 'Сохранить',
                'attr': {'class': 'btn btn-primary'},
            }) }}
        </div>
    </div>

    {{ form_end(form) }}


{% endblock %}
