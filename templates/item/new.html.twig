{% extends 'base.html.twig' %}

{% block title %}Hello ItemController!{% endblock %}

{% block body %}
    {{ form_start(form) }}

    <div class="container">
        <div class="buttons-header">
            <a href="{{ path('admin_items') }}" class="btn btn-primary">New tag</a>
        </div>
        <div class="question-block">
            <div>
                <div>
                    {{ form_row(form.name, {
                        'label': false,
                        'attr': {'class': 'form-control',
                            'placeholder': 'Item',
                        }
                    }) }}
                </div>

                <div>
                    {{ form_row(form.description, {
                        'label': false,
                        'attr': {'class': 'form-control',
                            'placeholder': 'Description',
                        }
                    }) }}
                </div>

                <div class="answers-block">
                    <ul class="list-group">
                        <ul id="type-fields-list" class="list-group"
                            data-prototype="{{ form_widget(form.itemTags.vars.prototype)|e('html_attr') }}"
                            data-widget-tags="{{ '<li class="list-group-item"></li>'|e }}"
                            data-widget-counter="{{ form.itemTags|length }}">
                            {% for tag in form.itemTags %}
                                <li class="list-group-item">
                                    {{ form_errors(tag) }}
                                    {{ form_widget(tag) }}
                                </li>
                            {% endfor %}
                        </ul>

                        <div class="add-answer-block">
                            <button type="button"
                                    class="add-another-collection-widget btn btn-info"
                                    data-list-selector="#type-fields-list">Add tag
                            </button>
                        </div>
                    </ul>
                </div>
            </div>
        </div>

        <div>
            {{ form_widget(form.mapOption) }}
        </div>

        <div class="submit-block">
            {{ form_widget(form.submit, {
                'attr': {'class': 'btn btn-success'},
            }) }}
            <a href="{{ path('admin_items') }}" class="btn btn-outline-dark">Back</a>
        </div>
    </div>

    {{ form_end(form) }}


{% endblock %}
