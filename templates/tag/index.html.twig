{% extends 'base.html.twig' %}

{% block title %}Hello TagController!{% endblock %}

{% block body %}

   <div class="container">
       <table class="table">
           <thead>
           <th scope="col">Tag</th>
           <th scope="col">Action</th>
           </thead>
           <tbody>
           {% for tag in tags %}
           <tr>
               <td>
                   {{ tag.name }}
               </td>
               <td>
                   <a href="{{ path('admin_tag_edit', {'id': tag.id}) }}" class="btn btn-info">Edit</a>
               </td>
               {% endfor %}
           </tbody>
       </table>
   </div>

{% endblock %}
